templ ViewSnippet(data types.TemplateData, snippet models.Snippet) {
@layout.Base("View Snippet", data) {
<div class="snippet">
    <div class="metadata">
        <strong>{ snippet.Title }</strong>
        <span>#{ fmt.Sprintf("%d", snippet.ID) }</span>
    </div>
    <pre><code>{ snippet.Content }</code></pre>
    <div class="metadata">
        <time>Created: { humanDate(snippet.Created) }</time>
        <time>Expires: { humanDate(snippet.Expires) }</time>
    </div>
</div>
}
}